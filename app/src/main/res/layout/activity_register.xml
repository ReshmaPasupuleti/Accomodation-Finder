<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#1B7CED"
    android:layout_height="match_parent">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/registrationbg"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="WELCOME"
        android:layout_marginTop="150dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:textSize="20sp"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/rgs_etFullName"
        android:layout_width="match_parent"
        android:background="@drawable/edittextstyle"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:maxLength="30"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:hint="Full Name" />

    <EditText
        android:id="@+id/rgs_etEmail"
        android:layout_width="match_parent"
        android:background="@drawable/edittextstyle"
        android:layout_height="50dp"
        android:maxLength="40"
        android:layout_margin="10dp"
        android:inputType="textEmailAddress"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:hint="Email" />

    <EditText
        android:id="@+id/rgs_etPhone"
        android:layout_width="match_parent"
        android:background="@drawable/edittextstyle"
        android:layout_height="50dp"
        android:maxLength="10"
        android:layout_margin="10dp"
        android:inputType="number"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:hint="Phone" />


    <EditText
        android:id="@+id/rgs_dpdob"
        android:layout_width="match_parent"
        android:background="@drawable/edittextstyle"
        android:layout_height="50dp"
        android:maxLength="10"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_margin="10dp"
        android:inputType="date"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:hint="Date of Birth " />

    <EditText
        android:id="@+id/rgs_etOccupation"
        android:layout_width="match_parent"
        android:background="@drawable/edittextstyle"
        android:layout_height="50dp"
        android:maxLength="20"
        android:layout_margin="10dp"
        android:inputType="text"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:hint="Occupation" />

    <EditText
        android:id="@+id/rgs_etPassword"
        android:layout_width="match_parent"
        android:background="@drawable/edittextstyle"
        android:layout_height="50dp"
        android:maxLength="20"
        android:layout_margin="10dp"
        android:inputType="textPassword"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:hint="Password" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nationality: "
            android:textSize="15sp"
            android:textColor="#fff"

            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <Spinner
            android:id="@+id/rgs_spNationality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:entries="@array/nationalities"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender: "
            android:textSize="15sp"
            android:textColor="#fff"

            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <Spinner
            android:id="@+id/rgs_spGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:entries="@array/gender"

            />
    </LinearLayout>






    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/rgs_btnRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:text="Register"
        android:background="@drawable/buttonselector"
        android:textSize="20sp"
        android:textColor="#fff" />
    <TextView
        android:id="@+id/rgs_tvGotoLogin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:text="Already a Member? Login"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#fff" />
</LinearLayout>
</ScrollView>